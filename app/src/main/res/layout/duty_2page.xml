                    android:textColor="#1B1B1B"
                    android:textSize="32dp" />

                <TextView
                    android:id="@+id/blank1"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_black"
