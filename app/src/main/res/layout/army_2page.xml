                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/border">

                    <ScrollView
                        android:id="@+id/detailscroll"
                        android:layout_width="340dp"
                        android:layout_height="447dp"
                        android:layout_marginTop="17dp"
                        android:elevation="8dp">

                        <!-- 자식은 반드시 하나, 예: LinearLayout -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20dp"
                                    android:text="정의"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <View
                                    android:id="@+id/view9"
                                    android:layout_width="270dp"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#024C6F" />

                                <FrameLayout
                                    android:layout_width="300dp"
                                    android:layout_height="121dp"
                                    android:layout_marginLeft="21dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#F3F3F3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:text="병역진로설계란?"
                                            android:textColor="#024C6F" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="• 입영 전 청소년 및 병역의무자가 군 복무 중, \n  이후 진로설계를 돕는 프로그램"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />
                                    </LinearLayout>

                                </FrameLayout>

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20dp"
                                    android:text="지원 대상"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <View

                                    android:layout_width="270dp"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#024C6F" />

                                <FrameLayout
                                    android:layout_width="300dp"
                                    android:layout_height="90dp"
                                    android:layout_marginLeft="21dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#F3F3F3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="84dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:text="지원 대상"
                                            android:textColor="#024C6F" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="• 군 입대 예정 청소년, 모든 병역의무자"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                    </LinearLayout>

                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20dp"
                                    android:text="지원 내용"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="270dp"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#024C6F" />

                                <FrameLayout
                                    android:layout_width="300dp"
                                    android:layout_height="161dp"
                                    android:layout_marginLeft="21dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#F3F3F3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:text="지원 내용"
                                            android:textColor="#024C6F" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="• 직업 선호도 검사"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="• 1:1 진로 상담"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="• 군 생활 자기계발 정보 제공"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="• 개인 경력개발 및 취업 지원"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                    </LinearLayout>

                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20dp"
                                    android:text="신청 방법"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="270dp"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#024C6F" />

                                <FrameLayout
                                    android:layout_width="300dp"
                                    android:layout_height="161dp"
                                    android:layout_marginLeft="21dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#F3F3F3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:text="신청 방법"
                                            android:textColor="#024C6F" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="① 온라인 신청: 청년센터 병역진로설계"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="② 필요서류: 없음 (온라인 신청 시 기본 정보 입력)"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="③ 신청장소: 군 입대 전 병무청 또는 고용센터"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="④ 신청기간: 상시 신청 가능"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                    </LinearLayout>

                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20dp"
                                    android:text="유의 사항"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="270dp"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#024C6F" />

                                <FrameLayout
                                    android:layout_width="300dp"
                                    android:layout_height="110dp"
                                    android:layout_marginLeft="21dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#F3F3F3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:text="유의 사항"
                                            android:textColor="#024C6F" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="• 입대 전 또는 복무 중 신청 가능"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="• 타 기관의 유사 프로그램과 중복 불가"
                                            android:textColor="#282828"
                                            android:textSize="12dp" />

                                    </LinearLayout>

                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>


                <!--  상단 아이콘 모음 영역  -->
                <!--  하단 주요 버튼 및 이미지  -->
            </LinearLayout>
        </LinearLayout>

        <!-- 상단 아이콘 모음 영역 -->

        <!-- 하단 주요 버튼 및 이미지 -->


    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_margin="0dp"
            app:srcCompat="@drawable/home_active" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="17dp"
            android:layout_height="65dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/setting_1"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>