<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".updateActivity">

    <!-- 상단 FrameLayout -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F3F3F3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/underbar_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 메인 컨텐츠 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View android:layout_width="match_parent" android:layout_height="12dp" />

            <ImageView
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/group_7" />

            <View android:layout_width="match_parent" android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <View android:layout_width="30dp" android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/da"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_black"
                    android:text="DA"
                    android:textColor="#1B1B1B"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_black"
                    android:text=":P"
                    android:textColor="#024C6F"
                    android:textSize="32sp" />

                <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="12dp"
                    app:srcCompat="@drawable/group_8__2_" />

                <View android:layout_width="10dp" android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="17dp"
                    app:srcCompat="@drawable/group_9__1_" />

                <View android:layout_width="30dp" android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/group_24" />

                <View android:layout_width="match_parent" android:layout_height="60dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="죄송합니다.\n업데이트 준비중입니다."
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- 하단 언더바 프레임 -->
    <FrameLayout
        android:id="@+id/underbar_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/botton_bar"
            android:scaleType="fitXY" />

        <!-- 좌측 버튼 -->
        <ImageButton
            android:id="@+id/btleft_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <!-- 우측 버튼 -->
        <ImageButton
            android:id="@+id/btright_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
